%macro Descriptor 3
;usage: Descriptor Base, Limit, Attr
;	Base:  dd (32 bits 段基址)
;	Limit: dd (low 20 bits available,20 bits 段界限)
;	Attr:  dw (lower 4 bits of higher byte are always 0)

	dw	%2 & 0FFFFh ; 段界限1
	dw	%1 & 0FFFFh ; 段基址1
	db	(%1 >> 16) & 0FFh ; 段基址2
	dw	((%2 >> 8) & 0F00h) | (%3 & 0F0FFh) ; 属性1 + 段界限2 + 属性2
	db	(%1 >> 24) & 0FFh ; 段基址3
%endmacro ; 共 8 字节

%macro Gate 4
;usage:	Gate	Selector,	Offset,	Dcount,	Attr
;	Selector:	dw
;	Offset:		dd
;	Dcount:		db
;	Attr:		db
	
	dw	%2 & 0ffffh			;offset 1
	dw	%1 & 0ffffh			;selector
	db	%3 & 01fh			;Param count
	db	%4 & 0ffh			;Attr
	dw	(%2 >> 16) & 0ffffh	;offset 2
%endmacro;8 bytes
